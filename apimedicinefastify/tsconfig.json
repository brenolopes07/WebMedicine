{
    "compilerOptions": {
        "target": "ES2020", // Define o alvo de compilação
        "module": "CommonJS", // Define o sistema de módulos
        "strict": true, // Ativa verificações estritas
        "esModuleInterop": true, // Habilita interoperabilidade com módulos ES
        "forceConsistentCasingInFileNames": true, // Garante consistência no uso de maiúsculas/minúsculas
        "skipLibCheck": true, // Ignora verificação de tipos em arquivos de definição
        "outDir": "./dist", // Diretório de saída para arquivos compilados
        "rootDir": "./src", // Diretório raiz dos arquivos de entrada
        "resolveJsonModule": true, // Permite importar arquivos JSON
        "moduleResolution": "node", // Resolve módulos no estilo Node.js
        "types": ["node"] // Inclui definições de tipos para Node.js
    },
    "include": ["src/**/*"], // Inclui arquivos na pasta src
    "exclude": ["node_modules", "dist"] // Exclui node_modules e dist
}